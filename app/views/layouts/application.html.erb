<!DOCTYPE html>
<html>
<head>
  <title>SoundRoom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<% if current_user %>
  Logged in as <%=current_user[:soundcloud_username]%>
  <%= link_to 'logout','/auth/logout' %>
<% else %>
  <%= link_to 'login with soundcloud','/auth/soundcloud' %>
<% end %>

</body>
</html>
