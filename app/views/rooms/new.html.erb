<h1>Create New Room</h1>

  <%= form_for @room do |f| %>
  <% if @room.errors.any? %>
    <div>
      <%= pluralize(@room.errors.count, "error") %> prevented this room from being created:
      <ul>
        <%= @room.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <%end%>
  
<!-- Create a new room -->
<h1>Create New Room</h1>

    <%= f.label :name %>
    <%= f.text_field :name %><br />
    <%= f.submit%>
  <%end%>

  