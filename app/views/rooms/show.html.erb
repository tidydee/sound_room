<h1> <%= @room.name %> </h1>

<%= @room.name %> <%= link_to "delete", room_path(@room), method: :delete, data: {confirm: "You sure?"} %>


  <div>

 <%= form_for @room do |f| %>
    <div class="error-message">
      <% if @room.errors.any? %>
        <div class="error-message-header"> 
          <%= pluralize(@room.errors.count, "error") %> prevented this room from being created:
        </div>
        <ul>
          <% @room.errors.full_messages.each do |msg| %>
            <li class="error-message-body"><%= msg %></li>
          <% end %>
        </ul>  
      <% end %>
    </div>
  <% end %>  
</div>


  <div>
    <% if current_user %>
      <h4>Room's Playlist</h4>
      <p>Add a new song to the playlist</p>
      <% @songs.each do |song| %>
        <%= song.url %><br />
      <% end %>
    <% else %> 
      <h5 style='color:white; background-color: orange; width: 100%; border: solid orange 3px;'>Please sign in to add to the playlist.</h5>
    <% end %>
  </div>



